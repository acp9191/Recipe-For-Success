{
	"manifest_version" : 2,
	"name" : "Avery's Recipe App",
	"version" : "0.1",
	"background": {
		"scripts" : ["background.js"]
	},
	"content_scripts" : [
		{
			"matches" : [
				"https://cooking.nytimes.com/recipes/*"
			],
			"js" : [
				"jquery-3.2.1.min.js"
			],
			"css" : [
				"style.css"
			]
		}
	],
	"browser_action": {
    	"default_title": "Time to Cook!",
    	"default_icon": "icon.png"
  	},
  	"permissions" : ["https://cooking.nytimes.com/recipes/*"]
}